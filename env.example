# HelvetiForma v3 - Configuration Environment
# Copy this file to .env.local and update the values

# WordPress/TutorLMS Configuration
NEXT_PUBLIC_WORDPRESS_URL=https://cms.helvetiforma.ch
WORDPRESS_APP_USER=service-account
WORDPRESS_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# TutorLMS Pro Configuration
TUTOR_API_URL=https://cms.helvetiforma.ch
TUTOR_LICENSE_KEY=EC00F-9DF58-E44EC-E68BC-1757919356
TUTOR_CLIENT_ID=your_tutor_client_id
TUTOR_SECRET_KEY=your_tutor_secret_key
DEFAULT_COURSE_ID=24

# Microsoft Graph API (Teams Integration)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key

# Supabase (Minimal Usage)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Content Management
GITHUB_TOKEN=your_github_token_for_auto_commits
ADMIN_PASSWORD=secure_admin_password_here

# Application Settings
NODE_ENV=development
REVALIDATE_SECRET=your_revalidation_secret
NEXT_PUBLIC_SITE_URL=http://localhost:3000

